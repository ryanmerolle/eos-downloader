[tool.poetry]
name = "eos_downloader"
version = "0.2.1"
description = "A toolkit to download Arista softwares"
authors = ["Thomas Grimonet <tom@inetsix.net>"]
repository = "https://github.com/titom73/arista-downloader"
license = "APACHE"
packages = [{ include = "eos_downloader" }]

[tool.poetry.scripts]
eos-download = 'bin.eos-download:main'

[tool.poetry.dependencies]
python = "^3.8"
cryptography = "*"
paramiko = "*"
requests = "*"
requests-toolbelt = "*"
scp = "*"
tqdm = "*"
loguru = "*"
cvprac = "*"

[tool.poetry.dev-dependencies]
pytest = "*"
pytest-cov = "*"
pytest-html = "*"
pytest-dependency = "*"
pytest-metadata = "*"

[build-system]
requires = ["poetry-core>=1.0.0"]
build-backend = "poetry.core.masonry.api"
